{
	"allowed_domains" : ["bloomberg.com"],
	"start_urls": [
		"http://www.bloomberg.com/quote/EL:US/news_data/company_news"
	],
	"rules": [
		{
			"allow": ["http://www.bloomberg.com/quote/EL:US/news_data/company_news/\\d+"],
			"follow": true
		},
		{
			"allow": ["http://www.bloomberg.com/news/\\d+.*"],
            "follow": false,
			"use_content": true
		}
	],
	"paths": {
		"title" : ["//title/text()"],
        "date" : ["//span[@class='datestamp']/text()"],
        "text" : ["//div[@id='story_display']"]
	},
	"source": "Bloomberg",
	"company": "The Est√©e Lauder Companies Inc."
}